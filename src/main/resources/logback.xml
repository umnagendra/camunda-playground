<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="LOCAL-CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout>
            <pattern>%d %-4r [%thread] %-5level %X{trackingId} %class{36}.%M - %msg%n</pattern>
        </layout>
    </appender>

    <root level="INFO">
        <appender-ref ref="LOCAL-CONSOLE" />
    </root>
</configuration>